<section class="page-header">
  <h1>Admin Login</h1>
  <p>Restricted area. Pizza ops only.</p>
</section>

<div class="admin-main">
  <section class="admin-card auth-card">
    <% if (error) { %>
      <div class="alert alert-error">
        <%= error %>
      </div>
    <% } %>

    <form action="/admin/login" method="POST" class="form admin-form">
      <div class="admin-form-grid">
        <label class="admin-field" for="username">
          <span class="admin-label">Username</span>
          <input id="username" name="username" type="text" required />
        </label>

        <label class="admin-field" for="password">
          <span class="admin-label">Password</span>
          <input id="password" name="password" type="password" required />
        </label>
      </div>

      <div class="admin-form-actions">
        <button type="submit" class="btn-primary btn-full">Sign In</button>
      </div>
    </form>
  </section>
</div>
