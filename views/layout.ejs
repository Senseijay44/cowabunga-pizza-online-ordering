<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %> | Cowabunga Pizza</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Quick CSS framework if allowed (optional) -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="site-header">
    <nav class="nav">
      <a href="/" class="brand">Cowabunga Pizza</a>
      <ul class="nav-links">
        <li><a href="/menu" class="<%= currentPath.startsWith('/menu') ? 'active' : '' %>">Menu</a></li>
        <li><a href="/checkout" class="<%= currentPath.startsWith('/checkout') ? 'active' : '' %>">Checkout</a></li>
      </ul>
    </nav>
    <% if (isAdmin && isAdminRoute && currentPath !== '/admin/login') { %>
      <nav class="admin-nav">
        <div class="admin-nav-row">
        <div class="admin-nav-links">
          <a href="/admin/orders" class="<%= currentPath.startsWith('/admin/orders') ? 'active' : '' %>">Orders</a>
          <a href="/admin/reports" class="<%= currentPath.startsWith('/admin/reports') ? 'active' : '' %>">Reports</a>
          <a href="/admin/menu" class="<%= currentPath.startsWith('/admin/menu') ? 'active' : '' %>">Menu</a>
        </div>
        <div class="admin-nav-links admin-nav-links--right">
          <a href="/admin/logout">Logout</a>
        </div>
        </div>
      </nav>
    <% } %>
  </header>

  <main class="content">
    <%- body %>
  </main>

  <footer class="site-footer">
    <p>&copy; <%= new Date().getFullYear() %> Cowabunga Pizza. Powered by pizza.</p>
  </footer>

    <script>
      window.CB_APP_CONFIG = Object.assign({}, window.CB_APP_CONFIG, {
        taxRate: <%- JSON.stringify(typeof taxRate === 'number' ? taxRate : 0) %>,
      });
    </script>
    <script src="/js/main.js"></script>
  <script src="/js/builder.js"></script>
</body>
</html>
